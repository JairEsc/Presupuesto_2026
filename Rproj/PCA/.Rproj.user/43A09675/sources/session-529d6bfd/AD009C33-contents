
m = abs(matriz_corr) > 0.8   

indices = resultados |> 
  dplyr::group_by(columna) |> 
  dplyr::summarise(count=dplyr::n())

resultados = data.frame(
  columna = colnames(matriz_corr)[indices[,2]],
  fila = rownames(matriz_corr)[indices[,1]]
)

resultados = resultados[resultados$columna != resultados$fila, ]
